		android:id="@+id/buttonCoureur10"
		android:layout_width="@dimen/bouton_coureur_largeur"
		android:layout_height="@dimen/bouton_coureur_hauteur"
		android:layout_below="@+id/buttonCoureur8"
		android:layout_alignParentRight="true"
		android:layout_marginTop="@dimen/espace_bouton"
		android:layout_marginEnd="@dimen/marge_bouton"
